# **************************************************************************** #

# **************************************************************************** #
# 																NAME																			   #
# **************************************************************************** #

SERVER		=	server
CLIENT		=	client

# **************************************************************************** #
# 															DIRECTORIES																	   #
# **************************************************************************** #

PRINTF			=	ft_printf/

# **************************************************************************** #
# 													COMPILER AND CFLAGS															   #
# **************************************************************************** #

CC				=	gcc
CFLAGS		=	-Wall -Wextra -Werror -I$(PRINTF)/headers -L$(PRINTF) -lftprintf
RM				=	rm -rf

# **************************************************************************** #
# 																COLOURS																		   #
# **************************************************************************** #

#DEF_COLOR = \033[0;39m
#GRAY = \033[0;90m
#RED = \033[0;91m
#GREEN = \033[0;92m
#YELLOW = \033[0;93m
#BLUE = \033[0;94m
#MAGENTA = \033[0;95m
#CYAN = \033[0;96m
#WHITE = \033[0;97m

# **************************************************************************** #
# 																	SOURCES																	   #
# **************************************************************************** #
# **************************************************************************** #
# 																	COMMANDS																   #
# **************************************************************************** #

all:
		@make -s -C $(PRINTF)
		@$(CC) $(FLAGS) server.c -o $(SERVER)
		@$(CC) $(FLAGS) client.c -o $(CLIENT)
		@echo $(GREEN)"Minitalk is ready"$(DEF_COLOR)

clean:
		@echo "$(YELLOW)Deleting Objects$(CYAN)"
		@make clean -s -C $(PRINTF)
		@echo "$(GREEN)MINITALK: DONE"$(DEF_COLOR)

fclean:
		@echo "$(YELLOW)Deleting with fclean$(CYAN)"
		@$(RM) $(SERVER) $(CLIENT)
		@make fclean -C $(PRINTF)
		@echo "$(GREEN)All MINITALK files are cleaned"$(DEF_COLOR)

re: 	fclean all

.PHONY:  re fclean clean all
