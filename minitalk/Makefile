# **************************************************************************** #
# 								NAME										   #
# **************************************************************************** #

SERVER		=	server
CLIENT		=	client

# **************************************************************************** #
# 								DIRECTORIES									   #
# **************************************************************************** #

LIBFT		=	libft

# **************************************************************************** #
# 								COMPILER AND CFLAGS							   #
# **************************************************************************** #

CC			=	gcc
CFLAGS		=	-Wall -Wextra -Werror -g
RM			=	rm -rf

# **************************************************************************** #
# 								COLOURS										   #
# **************************************************************************** #

DEF_COLOR = \033[0;39m
GRAY = \033[0;90m
RED = \033[0;91m
GREEN = \033[0;92m
YELLOW = \033[0;93m
BLUE = \033[0;94m
MAGENTA = \033[0;95m
CYAN = \033[0;96m
WHITE = \033[0;97m

# **************************************************************************** #
# 								SOURCES										   #
# **************************************************************************** #
# **************************************************************************** #
# 								COMMANDS									   #
# **************************************************************************** #

all:
		@make -s -C $(LIBFT)
		@gcc $(FLAGS) server.c -o $(SERVER)
		@gcc $(FLAGS) client.c -o $(CLIENT)
		@echo $(GREEN)"Minitalk is ready" $(DEF_COLOR)

clean:
		@echo "$(YELLOW)Deleting Objects$(CYAN)"
		@make clean -s -C $(LIBFT)
		@echo "$(Green)DONE"

fclean:
		@echo "$(YELLOW)Deleting with fclean$(CYAN)"
		@rm -f $(SERVER) $(CLIENT)
		@make fclean -C $(LIBFT)
		@echo "$(GREEN)All the files are cleaned"

re: 	fclean all

.PHONY: tmp, re, fclean, clean
